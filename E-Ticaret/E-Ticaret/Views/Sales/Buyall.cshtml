@model List<EntityLayer.Entities.Cart>
@{
    ViewData["Title"] = "Buyall";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container">
    <div class="container">
        <h2>Merhaba @User.Identity.Name Satın Alma Sayfasına Hoşgeldiniz</h2>
    </div>


    <div class="container">
        @using (Html.BeginForm("Buyall2", "Sales", FormMethod.Post))
        {
            foreach (var item in Model)
            {
                <div class="form-group">
                    <h5>ID:@Html.DisplayFor(x=>item.Id)</h5>
                </div>

                <div class="form-group">
                    <h5>Ürün Ad:@Html.DisplayFor(x=>item.Product.Name)</h5>
                </div>

                <div class="form-group">
                    <h5>Adet:@Html.DisplayFor(x=>item.Quantity)</h5>
                </div>

                <div class="form-group">
                    <h5>Price:@Html.DisplayFor(x=>item.Price)</h5>
                </div>

                <div class="form-group">
                    <h5>Resim:<img src="~/image/@item.Product.Image" width="50" height="50" /></h5>
                </div>
            }

            <p style="color:red; text-align:center">@ViewBag.Tutar</p>
            <div class="container">

                <div class="form-group" style="float:left">
                    <button class="btn btn-success">Onay</button>
                </div>

                <div style="float:right">
                    <a href="/Cart/Index" class="btn btn-danger">İptal</a>
                </div>

            </div>

        }
    </div>
</div>